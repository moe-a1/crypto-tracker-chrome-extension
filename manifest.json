{
  "manifest_version": 3,
  "name": "Crypto Price Tracker",
  "version": "1.0",
  "description": "Track crypto token prices",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://pro-api.coinmarketcap.com/"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/default.png"
  }
}
